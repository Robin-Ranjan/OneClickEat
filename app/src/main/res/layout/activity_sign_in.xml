<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.SignInActivity">

    <ImageView
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="One Click Eat"
        android:textSize="35sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="155dp"
        android:layout_height="18dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:textStyle="normal"
        android:text="Deliver Favorite Food"
        android:textSize="14sp" />

    <TextView
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:text="Sign Up Here"
        android:textSize="21sp" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edittext_line"
        android:drawableLeft="@drawable/user_plus"
        android:drawablePadding="10dp"
        android:elevation="5dp"
        android:hint="Name"
        android:inputType="textPassword"
        android:paddingStart="10dp" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_line"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="10dp"
        android:elevation="5dp"
        android:hint="Email or Phone Number"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_line"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="10dp"
        android:elevation="5dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="or"
        android:textStyle="italic"
        android:textSize="11sp" />

    <TextView
        android:layout_width="124dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Continue With"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/white_button"
            android:drawableLeft="@drawable/google"
            android:paddingStart="10dp"
            android:text="Google"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/white_button"
            android:drawableLeft="@drawable/facebook"
            android:paddingStart="10dp"
            android:text="Facebook"
            android:textAllCaps="false" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreatAccount"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/greenbuttongradient"
        android:gravity="center"
        android:text="Careat Account"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/txtAlreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Already Have An Account?"
        android:textColor="@color/textColor"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:clickable="true"
        />

</LinearLayout>